{
  "extends": "@lipemat/js-boilerplate/config/tsconfig.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "PostCSS Boilerplate",
  "include": [
    "Gruntfile.ts",
    "bin/**/*",
    "config/**/*",
    "helpers/**/*",
    "jest/**/*",
    "scripts/**/*",
    "types/**/*.d.ts"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS"
  }
}
