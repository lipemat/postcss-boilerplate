{
  "extends": "@lipemat/js-boilerplate/config/tsconfig.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "PostCSS Boilerplate",
  "include": [
    "config/**/*",
    "scripts/**/*",
    "tests/**/*",
    "helpers/**/*"
  ],
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true
  }
}
